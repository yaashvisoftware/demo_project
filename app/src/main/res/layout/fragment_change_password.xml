<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/default_top_bottom_margin_large"
            android:paddingBottom="@dimen/default_top_bottom_margin_small">

            <include layout="@layout/profile_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/default_top_bottom_margin_large"
                android:background="@color/grey_color">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_arrow" />

                <com.spice.spicestyle.textviewsbuttons.BlackTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:paddingLeft="2dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/line_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_top_bottom_margin_large"
                android:padding="@dimen/default_top_bottom_margin_large"
                android:background="@drawable/grey_round_boundary"
                android:orientation="vertical">

                <com.spice.spicestyle.textviewsbuttons.SimpleTextView
                    android:id="@+id/tvEmailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address\nsunnyg45@gmail.com"/>

                <com.spice.spicestyle.textviewsbuttons.SimpleTextView
                    android:layout_marginTop="@dimen/default_top_bottom_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Old Password"/>

                <com.spice.spicestyle.textviewsbuttons.SimpleEditTextBlack
                    android:id="@+id/etOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_top_bottom_margin_small"
                    android:background="@drawable/grey_boundary"/>

                <com.spice.spicestyle.textviewsbuttons.SimpleTextView
                    android:layout_marginTop="@dimen/default_top_bottom_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Password"/>

                <com.spice.spicestyle.textviewsbuttons.SimpleEditTextBlack
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_top_bottom_margin_small"
                    android:background="@drawable/grey_boundary"/>

                <com.spice.spicestyle.textviewsbuttons.SimpleTextView
                    android:layout_marginTop="@dimen/default_top_bottom_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"/>

                <com.spice.spicestyle.textviewsbuttons.SimpleEditTextBlack
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_top_bottom_margin_small"
                    android:background="@drawable/grey_boundary"/>

                <LinearLayout
                    android:id="@+id/llSaveContinue"
                    android:layout_marginTop="@dimen/default_top_bottom_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/black_light"
                    android:gravity="center_vertical"
                    android:padding="@dimen/default_side_margin_large">

                    <com.spice.spicestyle.textviewsbuttons.SimpleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Save &amp; Continue"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_sign"
                        android:layout_marginLeft="2dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>