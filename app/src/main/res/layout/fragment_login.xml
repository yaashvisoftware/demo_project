<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/default_top_bottom_margin_large"
        android:layout_marginLeft="@dimen/default_top_bottom_margin"
        android:layout_marginRight="@dimen/default_top_bottom_margin">

        <com.spice.spicestyle.textviewsbuttons.SimpleTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I HAVE AN ACCOUNT"
            android:textColor="@android:color/black"
            android:textSize="@dimen/number_of_items_size"/>

        <com.spice.spicestyle.textviewsbuttons.SimpleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_top_bottom_margin"
            android:text="Please provide your Mobile Number or Email to Login"/>

        <com.spice.spicestyle.textviewsbuttons.SimpleEditTextBlack
            android:id="@+id/etUserName"
            android:layout_marginTop="@dimen/default_top_bottom_margin_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_top_bottom_margin"
            android:background="@drawable/grey_boundary"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/user_account"
            android:drawablePadding="@dimen/default_side_margin_large"
            android:hint="Mobile Number / Email"
            android:singleLine="true"
            android:maxLines="1"/>

        <com.spice.spicestyle.textviewsbuttons.SimpleEditTextBlack
            android:id="@+id/etPassword"
            android:layout_marginTop="@dimen/default_top_bottom_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_top_bottom_margin"
            android:background="@drawable/grey_boundary"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/default_side_margin_large"
            android:hint="Your Password"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="textPassword"/>

        <LinearLayout
            android:id="@+id/llRememberMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/default_top_bottom_margin_large">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_remember_me"/>

            <com.spice.spicestyle.textviewsbuttons.SimpleTextView
                android:paddingLeft="@dimen/default_side_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_top_bottom_margin"
            android:padding="@dimen/default_side_margin_large"
            android:background="@drawable/round_corner_red_button_bg"
            android:gravity="center">

            <com.spice.spicestyle.textviewsbuttons.SimpleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="LOGIN"
                android:textSize="@dimen/buttons_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/default_top_bottom_margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/forgot_pwd_text_color"
                android:text="Forgot Password?"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/default_top_bottom_margin_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.spice.spicestyle.textviewsbuttons.BlackTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New to SpiceStyle?"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_top_bottom_margin_small"
            android:padding="@dimen/default_side_margin_large"
            android:background="@drawable/round_corner_red_button_bg"
            android:gravity="center">

            <com.spice.spicestyle.textviewsbuttons.SimpleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="SIGN UP"
                android:textSize="@dimen/buttons_text_size"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>